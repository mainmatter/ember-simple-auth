<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  <LinkTo @route="index" class="navbar-brand">
    Home
  </LinkTo>
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <LinkTo @route="protected" class="nav-link">
        Protected Page
      </LinkTo>
    </li>
    <li class="nav-item">
      <LinkTo @route="engine.protected" class="nav-link">
        Protected Engine Page
      </LinkTo>
    </li>
    <li class="nav-item">
      <LinkTo @route="engine.open-only" class="nav-link">
        Open-only Engine Page
      </LinkTo>
    </li>
    <li class="nav-item">
      <LinkTo @route="auth-error" class="nav-link">
        Auth Error Page
      </LinkTo>
    </li>
  </ul>
  <form class="form-inline">
    {{! display logout button when the session is authenticated, login button otherwise }}
    {{#if this.session.isAuthenticated}}
      {{#if this.sessionAccount.account}}
        <span class="navbar-text mr-3">Signed in as
          {{this.sessionAccount.account.name}}</span>
      {{/if}}
      <a
        {{on "click" this.logout}}
        class="btn btn-danger"
        href="#"
        role="button"
      >Logout</a>
    {{else}}
      <a
        {{on "click" @onLogin}}
        class="btn btn-success"
        href="#"
        role="button"
      >Login</a>
    {{/if}}
  </form>
</nav>
