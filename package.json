    "git-repo-version": "^0.4.1",
    "glob": "^7.1.2",
    "handlebars": "~4.0.10",
    "loader.js": "^4.5.1",
    "marked": "^0.3.6",
    "mermaid": "^7.0.3",
    "mocha": "^3.4.2",
    "mocha-only-detector": "0.1.0",
    "morgan": "^1.8.2",
    "rimraf": "^2.6.1",
    "sinon-chai": "~2.12.0",
    "torii": "~0.9.5"
